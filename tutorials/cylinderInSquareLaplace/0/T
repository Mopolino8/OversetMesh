FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions [0 0 0 0 1 0 0];

internalField uniform 0;

boundaryField
{
    oversetFaces
    {
        type overset;
        value uniform 0;
        coupledFringe yes;

        setHoleCellValue  yes;
        holeCellValue     0;
    }
    in
    {
        type fixedValue;
        value uniform 0;
    }
    out
    {
        type fixedValue;
        value uniform 0;
    }
    top
    {
        type fixedValue;
        value uniform 0;
    }
    bottom
    {
        type fixedValue;
        value uniform 0;
    }
    cylinder
    {
        type fixedValue;
        value uniform 1;
    }
    outerCylinder
    {
        type zeroGradient;
    }
    frontAndBack
    {
        type empty;
    }
}


